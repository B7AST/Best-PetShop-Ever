<%- partial("../partials/head.ejs") %>

   <div class="logged-user-info">
      <%- partial("../partials/navbar.ejs") %>

      <div class="container">
        <div class="row">
            <div class="col-md-5 offset-md-3">
                <div class="login-form bg-light mt-4 p-4">
                    <form action="/login" method="POST" class="row g-3">

                        <h4>User's Information</h4>
                        <div class="col-12">
                            <label>E-mail:</label>
                            <input type="text" name="email"  class="form-control" value="<%= theUser.email %>" disabled/><br> 
                        </div>
                        
                        <div class="col-12">
                              <label >First Name:</label>
                              <input type="text" name="firstName" class="form-control" value="<%= theUser.firstName %>"><br />
                               </div>
                        <div class="col-12">
                               <label >Last Name:</label>
                               <input type="text" name="lastName" class="form-control" value="<%= theUser.lastName %>"><br />
                        </div>
                        <div class="col-12">
                          <label >Address:</label>
                          <input type="text" name="address" class="form-control" value="<%= theUser.address %>"><br />
                        </div>
                        <div class="col-12">
                             <label >Contact Number:</label>
                             <input type="text" name="contact_number" class="form-control" value="<%= theUser.contact_number %>"><br/>
                             </div>
                        <div class="col-12">
                            <input type="submit" class="btn btn-success change-info" value="Change Info">
                           
                        </div>
                   
                    <hr class="mt-4">
                    <div class="col-12">
                        <p class="text-center mb-0"> <a href="/">Continue Shopping</a></p>
                       
                    </div>
                </form>

                </div>
            </div>
        </div>
    </div>


      <%- partial("../partials/footer.ejs") %>
            
      <%- partial("../partials/scripts.ejs") %>
</div>