<%- partial("../partials/head.ejs") %>        
      <%- partial("../partials/navbar.ejs") %>        
         <h2 class="text-center">Bird Products</h2>
         <hr>
         <h3 class="text-center capitalize">
            <%= subcategory.replace(/-/g, " " ) %>
         </h3>
         <hr>
         <div id="main" class="row">
            <!--sidebar-->
            <section id="sidebar" class=col-md-3>
               <p> Subcategory | <b class="capitalize">
                     <%= subcategory.replace(/-/g, " " ) %>
                  </b></p>
               <div class="border-bottom pb-2 ml-2">
                  <h4 id="burgundy">Filters</h4>
               </div>
               <div class="py-2 border-bottom ml-3 ">
                  <h6 class="font-weight-bold">Price</h6>
                  <label for="customRange1" class="form-label"></label>
                  <div id="orange"><span class="fa fa-minus"></span></div>
                  <div class="slidecontainer">
                     <input type="range" min="1" max="500" value="50" class="slider" id="myRange">
                     <div>Max-Price:<span id="rangeResult"></span> </div>
                   </div>
               </div>
               <div class="py-2 ml-3">
                  <h6 class="font-weight-bold">Availability</h6>
                  <div id="orange"><span class="fa fa-minus"></span></div>
                  <form>
                     <div class="form-group"> <input type="radio" name="status"value=1> In stock</div>
                     <div class="form-group"> <input type="radio" name="status"value=2> Out Of Stock</div>
                  </form>
                  <div class="py-2 ml-3">
                  <button id="search-button">Search</button>
               </div>
               </div>
           
            </section>
            <div class="col-md-1">
               <select name="" class="arrange">
                   <option selected disabled value="default">Default</option>
                   <option value="price-asc">Price Asc</option>
                   <option value="price-desc">Price Desc</option>
                   <option value="date-asc">Date Asc</option>
                   <option value="date-desc">Date Desc</option>
                   <!-- <option value="availability">Availability</option> -->
               </select>
            </div>

            <div id="item-list" class=" row col-md-8">
               <%birdProducts.forEach((product)=> { %>
                  <div class="col-lg-4 col-md-6 col-sm-10 offset-md-0 offset-sm-1" data-price="<%=product.retail_price%>"data-name="<%=product.name %>"data-date="<%=product.createdAt %>"data-status="<%=product.status%>">
                     <div class="card myProductBox cartbox"><a href="/products/view/<%=product.id%>"> <img
                              src="/img/product_images/bird/<%= category %>/<%= subcategory %>/<%=product.image_name%>"
                              alt="purina veterinary" />
                           <h4 class="productName">
                              <%= product.name %>
                           </h4>
                           <h4 class="price" hidden>
                              <%=product.retail_price%>
                           </h4>
                           <div class="d-flex flex-row my-2">
                              <!-- <div class="text-muted">₹110/loaf</div> -->
                        </a>
                        <div class="select-size">
                           <div id="quantity"><span class="retail-price">€ <%=product.retail_price.toFixed(2) %></span></div>
                           <!-- <div id="quantity"><button class="border rounded quantity-button"><span class="fa fa-plus"
                                    id="orange"></span></button> <span class="px-sm-1 quanNumber">1</span> <button
                                 class="border rounded quantity-button"><span class="fa fa-minus"
                                    id="orange"></span></button> </div> -->
                        </div>
                     </div> <button class="btn w-100 rounded my-2 addtocart" data-product-id="<%=product.id%>"><i
                           class="fas fa-shopping-cart"></i> Add to cart</button>
                  </div>
            </div>

            <%})%>
         </div>


         </div>
         <%-partial("../partials/footer.ejs") %>
         <%-partial("../partials/scripts.ejs") %>

