<%- partial("../partials/head.ejs") %>

<%- partial("../partials/navbar.ejs") %>
         <h2 class="text-center">Small Animal Products</h2>
         <hr>
         <h3 class="text-center capitalize">
            <%= subcategory.replace(/-/g, " " ) %>
         </h3>
         <hr>
         <div id="main" class="row">
            <!--sidebar-->
            <section id="sidebar" class=col-md-3>
               <p> Subcategory | <b class="capitalize">
                     <%= subcategory.replace(/-/g, " " ) %>
                  </b></p>
               <div class="border-bottom pb-2 ml-2">
                  <h4 id="burgundy">Filters</h4>
               </div>
               <div class="py-2 border-bottom ml-3">
                  <h6 class="font-weight-bold">Categories</h6>
                  <div id="orange"><span class="fa fa-minus"></span></div>

               </div>
               <div class="py-2 border-bottom ml-3">
                  <h6 class="font-weight-bold">Vendor</h6>
                  <div id="orange"><span class="fa fa-minus"></span></div>
                  <form>
                     <div class="form-group"> <input type="checkbox" id="tea"> <label for="tea">Tea Cakes</label> </div>
                     <div class="form-group"> <input type="checkbox" id="cookies"> <label for="cookies">Cookies</label>
                     </div>
                     <div class="form-group"> <input type="checkbox" id="pastries"> <label
                           for="pastries">Pastries</label>
                     </div>
                     <div class="form-group"> <input type="checkbox" id="dough"> <label for="dough">Cookie Dough</label>
                     </div>
                     <div class="form-group"> <input type="checkbox" id="choco"> <label for="choco">Chocolates</label>
                     </div>
                  </form>
               </div>
               <div class="py-2 ml-3">
                  <h6 class="font-weight-bold">Top Offers</h6>
                  <div id="orange"><span class="fa fa-minus"></span></div>
                  <form>
                     <div class="form-group"> <input type="checkbox" id="25off"> <label for="25">25% off</label> </div>
                     <div class="form-group"> <input type="checkbox" id="5off"> <label for="5off" id="off">5% off on
                           artisan
                           breads</label> </div>
                  </form>
               </div>
            </section>
            <div class="row col-md-9">
               <%smallAnimalsProducts.forEach((product)=> { %>
                  <div class="col-lg-4 col-md-6 col-sm-10 offset-md-0 offset-sm-1">

                     <div class="card myProductBox cartbox"><a href="/products/view/<%=product.id%>"> <img
                              src="/img/product_images/small-animals/<%= category %>/<%= subcategory %>/<%=product.image_name%>"
                              alt="purina veterinary" />
                           <h4 class="productName">
                              <%= product.name %>
                           </h4>
                           <h4 class="price" hidden>
                              <%=product.retail_price%>
                           </h4>
                           <div class="d-flex flex-row my-2">
                              <!-- <div class="text-muted">₹110/loaf</div> -->
                        </a>
                        <div class="select-size">
                           <div id="quantity"><span class="retail-price">€ <%=product.retail_price.toFixed(2) %></span></div>
                           <!-- <div id="quantity"><button class="border rounded quantity-button"><span class="fa fa-plus"
                                    id="orange"></span></button> <span class="px-sm-1 quanNumber">1</span> <button
                                 class="border rounded quantity-button"><span class="fa fa-minus"
                                    id="orange"></span></button> </div> -->
                        </div>
                     </div> <button class="btn w-100 rounded my-2 addtocart" data-product-id="<%=product.id%>"><i
                           class="fas fa-shopping-cart"></i> Add to cart</button>
                  </div>
            </div>

            <%})%>
         </div>


         </div>
         <%- partial("../partials/footer.ejs") %>
